URxvt.perl-ext-common: clipboard,resize-font,fullscreen

URxvt.urgentOnBell: true
URxvt.visualBell: true
URxvt*meta8: false
URxvt.depth: 32
urxvt*background: rgba:0000/0000/0200/c800
urxvt*transparent: true
urxvt*shading: 30

! Start maximized
URxvt*geometry: 256x96

! Fix font space
URxvt*letterSpace: -1
URxvt*lineSpace: 0  // pixels, default = 1

! Disable the stupid ctrl+shift picture mode
URxvt*iso14755: false
URxvt.iso14755_52: false

URxvt.internalBorder: 0
URxvt.externalBorder: 0

URxvt*scrollBar: false
URxvt.saveLines: 1024
URxvt.scrollTtyOutput:   false
URxvt.scrollWithBuffer:  true
URxvt.scrollTtyKeypress: true

URxvt.inheritPixmap: false
URxvt.fading: 0

!font-resize keybindings
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease

URxvt.keysym.F11: perl:fullscreen:switch

URxvt.allow_bold: true
URxvt*font: xft:MesloLGSDZ Nerd Font:style=Regular:regular:pixelsize=20:antialias=true:hinting=true
URxvt*boldFont: xft:MesloLGSDZ Nerd Font:style=Bold:bold:pixelsize=20:antialias=true:hinting=true
URxvt*italicFont: xft:MesloLGSDZ Nerd Font:style=Italic:italic:pixelsize=20:antialias=true:hinting=true
URxvt*boldItalicFont: xft:MesloLGSDZ Nerd Font:style=Bold Italic:bold:italic:pixelsize=20:antialias=true:hinting=true

